<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/personalHeadshot"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:src="@drawable/ic_profile_male_134"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/personalHeadshot"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">>
		<TextView
		    android:id="@+id/settingContent1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textColor="#000000"
		    android:text="TextView01"
		    android:textSize="16sp"/>
	    <TextView
		    android:id="@+id/settingContent2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textColor="#000000"
		    android:text="TextView01"
		    android:textSize="16sp"/>
    </LinearLayout>
	<ImageView 
	    android:layout_width="20dp"
	    android:layout_height="20dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:src="@drawable/grayright"/>

</RelativeLayout>
